# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.conf]
indent_size = 2

[*.json]
indent_size = 2

[*.sh]
indent_style = tab
